<div id="<%= dom_id category %>">
  <div class="mb-5 bg-white px-5 py-5 shadow-2xl">
   <div class="flex items-center justify-between">
      <h2 class="my-5  text-2xl font-"><%= category.name %></h2>
      <p class="font-bold"><%= Money.new(category.budgets.sum(:amount_cents)).format %></p>
   </div>
    <%= link_to "Show", category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', category_path(category), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>

  </div> 


</div>
