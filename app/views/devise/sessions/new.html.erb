<div class="relative mx-auto h-full w-full max-w-md shadow-2xl">
  <div class="h-screen">

    <div class="bg-lightblue px-10 py-10 shadow-2xl shadow-lightblue-500/50 mb-5">
      <h2 class="text-white text-center">LOGIN</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:"w-full mb-5 " %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class:"w-full mb-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <button class="actions bg-green-600 rounded px-2 py-1 mt-2 ml-3 mb-2">
        <%= f.submit "Log in" %>
      </button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
